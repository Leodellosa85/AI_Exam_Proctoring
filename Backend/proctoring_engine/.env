# ====== FACE DETECTION SETTINGS ======
FACE_ABSENCE_TIMEOUT=8            # Seconds before flagging "No face detected"
LOOKAWAY_THRESHOLD=3              # Number of consecutive frames before marking look-away
LOOKAWAY_MIN_ANGLE=25.0           # Degrees of head turn to count as look-away
DETECTION_FPS=6                   # How many frames per second the detector processes

# ====== LOGGING ======
LOG_DIR=./session_logs            # Folder for logs

# ====== HUGGING FACE MODEL SETTINGS ======
HF_MODEL_REPO_ID=hustvl/yolos-small
# Or leave empty:
# HF_MODEL_REPO_ID=

# HF_FACE_DETECT_MODEL=hustvl/yolos-small
# HF_LIVENESS_MODEL=your-username/your-liveness-model

# ====== OTHER OPTIONAL SETTINGS ======
# Enable debug mode (true/false)
DEBUG=true

# Path to Caffe model or Haarcascade (if you have one)
# FACE_MODEL_PATH=./models/haarcascade_frontalface_default.xml
